      {{#each gearData}}
        <tr id="myRow" style="color: rgba(221, 221, 221, 1);">
          <td>{{dataValues.itemName}}</td>
          
          <td>
          
            <button style="opacity: 0.5" type="button" class="descriptionBtn btn btn-info" data-toggle="modal" data-target="#exampleModalCenter" data-id={{dataValues.id}} data-description={{dataValues.itemDescription}}>
              Description
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Full Description</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <div class="form-group">
                      <label for="editDescription">View/Edit Description</label>
                      <input type="tel"  name="mobilePhone" class="form-control" id="editDescription" required>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                    <button type="button" data-id={{dataValues.id}} id="saveModalButton" class="btn btn-primary" data-dismiss="modal">Save changes</button>
                    
