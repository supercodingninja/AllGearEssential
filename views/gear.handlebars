          <td>{{dataValues.itemQuantityInPackingList}}</td>
          <td>
            <button dataId={{dataValues.id}} class="btn btn-danger" onclick="document.getElementById('remove').style.display='block'">Delete</button>
            
            <div id="remove" class="modal">
              <span onclick="document.getElementById('remove').style.display='none'" class="close" title="Close Modal">
                &times;
              </span>
              
              <form class="modal-content" action="/action_page.php">
                <div class="container">
                  <h1>Delete</h1>
                  <p>Are you sure you want to delete your item?</p>

